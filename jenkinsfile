pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                dir("${WORKSPACE}/Documents/Github/ApiRest_JavaSpring") {
                    sh 'git clone file:////C:/Users/user/Documents/Github/ApiRest_JavaSpring'
                }
            }
        }
        stage('Build') {
            steps {
                dir("${WORKSPACE}/Documents/Github/ApiRest_JavaSpring") {
                    sh 'mvn clean package'
                }
            }
        }
        /*
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        */
        stage('Deploy') {
            steps {
                dir("${WORKSPACE}/Documents/Github/ApiRest_JavaSpring") {
                    sh 'git add. && git commit -m 'Subiendo actualizaciones' && git push -u master https://github.com/migacuna/ApiRestJavaSpring.git'
                }
                //sh 'mvn deploy'
            }
        }
    }
}
